 <div class="container">
  <div class="px-3 py-3 my-5 text-center" id="header-dashboard">
    <%= render "shared/avatar" %>
      <p class="mb-4 display-5">Welcome <%= current_user.username %> !</p>
      <div class="col-lg-6 mx-auto">
        <div class="d-grid gap-1 d-sm-flex justify-content-evenly justify-content-sm-center"         data-controller="tab">
          <ul class="list-inline tabs-underlined">
            <li>
              <%= link_to "En cours", dashboard_path(status: 'in_progress'), class:"tab-underlined #{'active' if @in_progress}"%>
            </li>
            <li>
              <%= link_to "Personnalisés", dashboard_path(status: 'personal_challenges'), class:"tab-underlined #{'active' if @personal_challenges}"%>
            </li>
            <li>
              <%= link_to "Validés", dashboard_path(status: 'accomplished'), class:"tab-underlined #{'active' if @accomplished}"%>
            </li>
          </ul>
        </div>
      </div>
  </div>
</div>

<div class="container" id="section1">
  <div class="row pt-5">
    <div class="col-md-12">
      <div class="row row-cols-1 row-cols-lg-3 align-items-stretch">
        <% @user_challenges.each do |user_challenge| %>
          <%= render "challenges/challenge", challenge: user_challenge.challenge %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script src="application.js"></script>

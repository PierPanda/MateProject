<div class="col pb-5">
  <div class="card-category position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url(<%= cl_image_path(challenge.photo.key) %>)">
    <div class="d-flex flex-column pb-3 text-white text-shadow-1 position-absolute top-0 start-0">
      <h3 class="py-5 px-3 fw-bold"><%= challenge.name %></h3>
    </div>
    <div class="position-absolute bottom-0 end-0 mx-3 ">
      <p class="ms-4"><strong><%= challenge.reward %> points </strong> level <%= challenge.level %> </p>
    </div>
  </div>
</div>

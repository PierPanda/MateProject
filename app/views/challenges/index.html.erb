<div class="container mt-3">
  <div class="row pt-5">
    <div class="col-md-12">
      <div class="row row-cols-1 row-cols-lg-3 align-items-stretch">
        <% @challenges.each do |challenge| %>
          <div class="col pb-5">
            <%= link_to challenge, class:"text-decoration-none" do %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
                <div class="d-flex flex-column pb-3 text-white text-shadow-1">
                  <h3 class="p-5 fw-bold"><%= challenge.name %></h3>
                </div>
                <div>
                  <p class="ms-4"><strong><%= challenge.reward %></strong></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

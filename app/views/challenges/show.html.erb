<%= render 'challenges/card_challenge', challenge: @challenge, user_challenge: @user_challenge %>

<div class="accordeon-container">
  <div class="accordion mx-1" id="accordionShow">
    <div class="accordion-item card-trip">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Description :
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <p class="ps-1"><%= @challenge.content %></p>
        </div>
      </div>
    </div>
    <div class="accordion-item card-trip">
      <h2 class="accordion-header" id="headingTwo">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Steps :
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <ul class="list-unstyled p-1">
            <% @challenge.steps.each do |challenge_step| %>
            <li class="ps-1"><%= challenge_step.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="d-flex justify-content-center my-3">
  <%# <%= link_to "Commencer", use, class: "btn-ghost text-decoration-none" %>
  <%= render 'challenges/new_user_challenge', challenge: @challenge, user_challenge: @user_challenge %>
</div>

<div class="d-flex justify-content-center align-items-center gap-2 mt-5 mx-2 flex-wrap">
  <%= link_to 'Dashboard', dashboard_path, class: 'form-actions btn-ghost' %>
  <%= render "challenges/share_modal", challenge: @challenge %>
  <%= link_to 'Back', challenges_path, class: 'form-actions btn-ghost' %>
</div>

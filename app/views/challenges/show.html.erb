<%= render 'challenges/card_challenge', challenge: @challenge, user_challenge: @user_challenge %>

<div class="accordeon-container">
  <div class="accordion mx-1" id="accordionShow">
    <div class="accordion-item card-trip rounded-5 mb-2">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Description :
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <p class="ps-1"><%= @challenge.content %></p>
        </div>
      </div>
    </div>
    <div class="accordion-item card-trip rounded-5 mb-2">
      <h2 class="accordion-header" id="headingTwo">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Steps :
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <ul class="list-unstyled p-1">
            <% @challenge.steps.each do |challenge_step| %>
            <li class="ps-1 text-decoration-none"> <i class="fa-regular fa-circle"></i> <%= challenge_step.name.html_safe %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container d-flex flex-column mb-3">
  <div class="d-flex justify-content-center my-2 mx-auto gap-4">
    <%# <%= link_to "Commencer", use, class: "btn-ghost text-decoration-none" %>
    <%= render 'challenges/new_user_challenge', challenge: @challenge, user_challenge: @user_challenge %>
    <%= link_to 'Profil', dashboard_path, class: 'btn-ghost text-decoration-none' %>
  </div>

  <div class="d-flex justify-content-center my-2 mx-auto gap-4">
    <div class="d-flex justify-content-center mx-auto">
      <%= link_to challenges_path, class: 'btn-ghost text-decoration-none' do %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>
    </div>
    <div>
      <i class="fa-regular fa-share-from-square btn-ghost mx-auto p-3" type="button" data-bs-toggle="modal" data-bs-target="#shareModal"></i>
      <%= render "challenges/share_modal", challenge: @challenge %>
    </div>
  </div>
</div>


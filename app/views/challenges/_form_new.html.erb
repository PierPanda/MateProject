<div class="container container-new d-flex justify-content-center col-sm-3 col-xs-3">
  <div class="feedback-form justify-content-center m-3">
    <h2 class="header text-center">Crée un challenge !</h2>
    <div>
      <%= simple_form_for [@challenge] do |f| %>
        <%= f.input :level, collection: Challenge::LEVEL, as: :select, label: "Choisis un niveau de difficulté:", class:"mb-3 form-group" %>
        <%= f.input :category, collection: Challenge::CATEGORIES, as: :select, label: "Choisis une catégorie:", class:"mb-3 form-group" %>
        <%= f.input :time, collection: Challenge::TIME, as: :select, label: "Choisis une durée:", class:"mb-3 form-group" %>
        <%= f.input :content, label: "Décris le challenge de tes rêves:", class:"mb-3 form-group" %>
        <%= f.button :submit, value: "Crée ton challenge !", class:"text-center btn-ghost" %>
      <% end %>
    </div>
  </div>
</div>
